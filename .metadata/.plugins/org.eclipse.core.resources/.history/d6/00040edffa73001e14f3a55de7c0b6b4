package patterns;

public class LeftAngledTri {

	public static void main(String[] args) {
		int rows = 5; // You can change the number of rows as needed

		for (int i = 1; i <= rows; i++) {
			for (int j = 1; j<=rows-i; j++) {
				System.out.print("  ");
			}
			for (int k = 1; k <= i; k++) {
				String res=i%2==0?""+i:"#";
				System.out.println(res);
			}
			System.out.println();
		}
	}
}
