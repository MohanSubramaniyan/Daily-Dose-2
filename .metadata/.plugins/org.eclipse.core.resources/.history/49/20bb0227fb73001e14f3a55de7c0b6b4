package patterns;

public class SlidePyramid {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int row=5;
		for(int i=1;i<=row;i++) {
			for(int j=1;j<=i;j++) {
				System.out.println("*");
			}System.out.println();
		}
		for(int i=row-1;i>0;i--) {
			for(int j=1;j<=i;j++) {
				System.out.println("*");
			}System.out.println();
		}
	}

}
