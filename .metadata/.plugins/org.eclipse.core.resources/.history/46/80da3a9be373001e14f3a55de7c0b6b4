package patterns;

import java.util.Scanner;

public class Hallow {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int row=sc.nextInt();
		for(int i=1;i<=row;i++) {
			for(int j=1;j<=row;j++) {
				if(i==1 || j==1 || i+j==i+1)
					System.out.print("# ");
			}System.out.println();
		}
	}

}
