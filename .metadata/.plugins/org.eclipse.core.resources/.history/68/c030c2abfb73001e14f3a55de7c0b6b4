package patterns;

import java.util.Scanner;

public class Hallow {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int row = sc.nextInt();
        for (int i = 1; i <= row; i++) {
            for (int j = 1; j <= row; j++) {
                if (i == 1 || j == 1 || i == row || j == row) {
                    System.out.print("# ");
                } else {
                    System.out.print(" ");
                }
                // Add a space after each character except for the last one
               
            }
            System.out.println();
        }
    }
}
