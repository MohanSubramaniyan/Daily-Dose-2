package patterns;
public class LeftAngledTri {

	public static void main(String[] args) {
        int rows = 5; // You can change the number of rows as needed

        for (int i = 1; i <= rows; i++) {
            // Print spaces before printing '*'
            for (int j = rows - i; j > 0; j--) {
                System.out.print("  ");
            }

            // Print '*' for the current row
            for (int k = 1; k <= i; k++) {
                System.out.print("* ");
            }

            System.out.println();
        }
    }
}
